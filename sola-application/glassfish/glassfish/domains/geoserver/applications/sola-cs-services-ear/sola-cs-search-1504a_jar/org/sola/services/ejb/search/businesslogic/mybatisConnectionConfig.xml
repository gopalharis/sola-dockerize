<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : Application connectionConfig.xml
    Created on : October 2011
    Author     : soladev
    Description:
        Contains configuration details for myBatis used by the ApplicationEJB
-->

<!DOCTYPE configuration PUBLIC '-//mybatis.org//DTD Config 3.0//EN' 'http://mybatis.org/dtd/mybatis-3-config.dtd'>
<configuration>
    
    <typeHandlers>
        <typeHandler javaType='java.lang.Character' handler='org.sola.services.common.repository.CharTypeHandler'/>
    </typeHandlers>
    
    <environments default='specificDataSource'>
        <environment id='sharedDataSource'>
            <transactionManager type='MANAGED'/>
            <dataSource type='JNDI'>
                <property name='data_source' value='jdbc/sola'/>
            </dataSource>
        </environment>
        <environment id='specificDataSource'>
            <transactionManager type='MANAGED'/>
            <dataSource type='JNDI'>
                <property name='data_source' value='jdbc/application'/>
            </dataSource>
        </environment>  
    </environments>

</configuration>
